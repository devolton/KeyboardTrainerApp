<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CustomSeaBreezeButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SeaBreezeBrush}"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Cursor" Value="SizeWE"/>
        <Setter Property="Foreground" Value="{StaticResource CustomWhiteBrush}"/>
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="20px"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        CornerRadius="5"
                        BorderThickness="1"
                        Background="{StaticResource SeaBreezeBrush}">
                        <Border.Effect>
                            <DropShadowEffect
                                Direction="300"
                                Color="#64B6AC"
                                ShadowDepth="5"
                                Opacity="0.8"
                                BlurRadius="15"/>
                        </Border.Effect>
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="{TemplateBinding Padding}"/>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
       
    </Style>
    <Style x:Key="CustomWatterButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource WatterBrush}"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Cursor" Value="SizeWE"/>
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource CustomWhiteBrush}"/>
        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                       CornerRadius="5"
                       BorderThickness="1"
                       Background="{StaticResource WatterBrush}">
                        <Border.Effect>
                            <DropShadowEffect
                               Direction="300"
                               Color="#56cfe1"
                               ShadowDepth="5"
                               Opacity="0.8"
                               BlurRadius="15"/>
                        </Border.Effect>
                        <ContentPresenter
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="{TemplateBinding Padding}"/>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
