<Window x:Class="KeyboardTrainerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardTrainerApp"
        mc:Ignorable="d"
        Title="KeyboardTrainer"
        Height="450"
        Width="700"
        KeyDown="OnMainFormKeyDown"
        Loaded="Window_Loaded">
    <Grid >
        <TextBlock FontSize="18px" FontFamily="Georgia" Foreground="Gray">
            <Run Name="prevRun"  Text=""/>
            <InlineUIContainer>
                <TextBlock Name="focusWordTextBlock">
                </TextBlock>
            </InlineUIContainer>
            <Run Name="afterRun" Text=""/>
        </TextBlock>
    </Grid>
</Window>
